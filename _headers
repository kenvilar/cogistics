# Cache headers for static assets (for Netlify/Cloudflare Pages/etc.)

# Images
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# SVG icons
/assets/svg/*
  Cache-Control: public, max-age=31536000, immutable

# CSS files
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript files
/assets/js/*
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/assets/css/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# HTML files - no cache
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
